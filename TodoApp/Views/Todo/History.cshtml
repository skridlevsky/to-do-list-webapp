@model TodoViewModel
@using Humanizer

@{
    ViewData["Title"] = "Manage your todo list";
}

<div class="panel panel-default todo-panel">

    <table class="table table-hover">
        <thead>
            <tr class="table-primary">
                <td>Item</td>
                <td>Due</td>
                <td></td>
            </tr>
        </thead>

        @foreach (var item in Model.Items)
        {
        <tr>
            <td>@item.Title</td>
            <td>@item.DueAt.Humanize()</td>
        </tr>
        }
    </table>

</div>